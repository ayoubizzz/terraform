# terraform.tfvars.example
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to Git!

# Project configuration
project_name = "image-gallery"
environment  = "dev"
aws_region   = "us-east-1"

# Database configuration
db_password  = "ChangeMe_SecurePassword123!"  # ⚠️ CHANGE THIS!
db_username  = "dbadmin"
db_name      = "imagegallery"

# Instance sizes (adjust based on your needs)
ec2_instance_type = "t3.micro"      # Free tier eligible
db_instance_class = "db.t4g.micro"  # Free tier eligible

# Tags
tags = {
  Project = "ImageGallery"
  Owner   = "YourName"
}
